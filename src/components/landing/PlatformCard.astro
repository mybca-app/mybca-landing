---
interface Props {
	rows: number;
	headingText: string;
	descriptionText?: string;
	imageLink?: string;
	imageAltText?: string;
	targetLink?: string;
}

const {
	rows = 1,
	headingText,
	descriptionText = "",
	imageLink,
	imageAltText = "",
	targetLink = "#",
} = Astro.props;

const rowSpanClass =
	rows === 1 ? "row-span-1" : rows === 2 ? "row-span-2" : "row-span-3";
---

<a
	href={targetLink}
	target="_blank"
	rel="noopener noreferrer"
	class={`block bg-mybca-light-bg-surface dark:bg-mybca-dark-bg-surface hover:bg-mybca-light-bg-surface-200 hover:dark:bg-mybca-dark-bg-surface-200 transition
		rounded-xl pt-4 px-4 ${imageLink ? "" : "pb-4"} ${rowSpanClass} flex flex-col `}
>
	<div class="flex flex-col h-full">
		<div class="p-3">
			<h2 class="font-semibold font-serif text-2xl">{headingText}</h2>
			<p>{descriptionText}</p>
		</div>
		{
			imageLink ? (
				<div class="flex grow items-end overflow-hidden">
					<img
						src={imageLink}
						alt={imageAltText}
						class="object-cover w-full h-full"
					/>
				</div>
			) : (
				<div class="mt-auto ml-auto">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
						class="size-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
						/>
					</svg>
				</div>
			)
		}
	</div>
</a>
